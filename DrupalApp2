apiVersion: apps/v1
kind: Deployment
metadata:
  name: drupal-app-2
spec:
  replicas: 1
  selector:
    matchLabels:
      app: drupal-2
  template:
    metadata:
      labels:
        app: drupal-2
    spec:
      containers:
      - name: drupal
        image: drupal:latest
        volumeMounts:
        - name: helloworld2
          mountPath: /var/www/html
      volumes:
      - name: helloworld2
        emptyDir: {}
